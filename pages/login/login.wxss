/* pages/login.wxss */
.login {
    height: 100%;
    overflow: hidden;
    background: linear-gradient(180deg, #5064EB 0%, #1375D2 100%);
}
.login-header {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: space-between;
}
.login-h-title {
    margin-top: 125rpx;
    padding-left: 70rpx;
    color: #fff;
    font-family: Alibaba PuHuiTi;
    font-size: 38rpx;
    font-weight: 400;
    line-height: 52rpx;
    color: rgba(255, 255, 255, 0.48);
    white-space: nowrap;
}
.login-h-tit {
    font-size: 50rpx;
    font-weight: 500;
    line-height: 69rpx;
    color: #FFFFFF;
}
.login-h-img {
    height: 526rpx;
    width: 479rpx;
    margin-top: 43rpx;
}
.login-content {
    position: relative;
    height: 100%;
    margin-top: -40rpx;
}
.login-info-wap {
    width: 552rpx;
    height: 453rpx;
    padding: 90rpx 55rpx;
    background-color: #fff;
    border-radius: 30rpx;
    position: absolute;
    top: -120rpx;
    left: 45rpx;
}
.login-input {
    padding-bottom: 33rpx;
    line-height: 39rpx;
    font-size: 32rpx;
    border-bottom: 2rpx solid #cecece;
}
.login-input::placeholder {
    font-size: 26rpx;
    color: #A8A8A8;
}
.login-input-code {
     position: relative;
     margin-top: 50rpx;
}
.login-code-btn {
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    width: 183rpx;
    position: absolute;
    right: 0;
    bottom: 25rpx;
    font-size: 26rpx;
    font-weight: 400;
    z-index: 10;
}
.login-login-btn {
    margin-top: 62rpx;
    height: 112rpx;
    line-height: 112rpx;
    border-radius: 62rpx;
    width: 100%;
    font-size: 36rpx;
    font-weight: 400;
}
.login-text {
    font-size: 24rpx;
    font-family: Source Han Sans SC;
    font-weight: 400;
    color: #A8A8A8;
    width: 100%;
    margin-top: 34rpx;
    display: flex;
    justify-content: center;
}
.login-text-btn {
    color: #1375D2;
    margin-left: 5rpx;
}